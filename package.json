{
  "name": "static-site",
  "private": true,
  "dependencies": {
    "@metalsmith/collections": "^1.2.1",
    "@metalsmith/drafts": "*",
    "@metalsmith/excerpts": "*",
    "@metalsmith/markdown": "*",
    "express": "^4.17.3",
    "jstransformer-nunjucks": "*",
    "metalsmith": "*",
    "metalsmith-layouts": "*"
  },
  "devDependencies": {
    "metalsmith-auto-collections": "^0.2.0",
    "serve": "^13.0.2"
  },
  "scripts": {
    "build": "cls & metalsmith",
    "serve": "run-server",
    "site": "npm run build && npm run serve",
    "backend": "node backend/server.js",
    "monitor-content": "title content & nodemon -e md -w source --exec npm run build",
    "monitor-backend": "nodemon -w backend --exec npm run backend",
    "monitor": "start monitor-content & start monitor-backend"

  }
}